<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BLACK POPUP MENU -->
    <style name="BlackPopupMenu" parent="ThemeOverlay.AppCompat">
        <item name="android:popupBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:itemBackground">@android:color/black</item>
    </style>

    <!-- BLACK DELETE CONFIRMATION DIALOG -->
    <style name="BlackAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>
